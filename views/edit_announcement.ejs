<%- include('header') %>

    <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>

    <div class="upload-container">
        <h2>게시물 편집</h2>

        <form action="/editannouncementinfo" method="post" class="upload-form">
            <input type="hidden" name="lecture_id" value="<%= announcement.lecture_id %>">
            <input type="hidden" name="idx" value="<%= announcement.idx %>">

            <div class="form-group">
                <label for="title">제목:</label>
                <input type="text" id="title" name="title" value="<%= announcement.title %>">
            </div>

            <div class="form-group">
                <label for="maintext">본문:</label>
                <textarea id="maintext" name="maintext"><%= announcement.maintext %></textarea>
            </div>

            <button type="submit" class="submit-button">업데이트</button>
        </form>
    </div>

    <script>
        CKEDITOR.replace('maintext');
    </script>

    <%- include('footer') %>